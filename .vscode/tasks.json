{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"group": "build",
			"label": "RM build dir",
			"windows": {
				"command": "rmdir /s /q build",
			},
			"command": "rm -rf build"
		},
		{
			"type": "shell",
			"group": "build",
			"label": "Conan install",
			"command": "$CONAN_INSTALL=Debug && $CONAN_INSTALL=RelWithDebInfo && $CONAN_INSTALL=Release",
			"options": {
				"env": {
					"CONAN_INSTALL": "conan install . --output-folder=build --build=missing --profile=conanprofile.txt --settings=build_type"
				}
			},
			"windows": {
				"command": "%CONAN_INSTALL%=Debug && %CONAN_INSTALL%=RelWithDebInfo && %CONAN_INSTALL%=Release",
				"options": {
					"env": {
						// "CXX": "C:/msys64/ucrt64/bin/g++.exe",
						// "CC": "C:/msys64/ucrt64/bin/gcc.exe",
						// "CXX": "C:/msys64/ucrt64/bin/clang++.exe",
						// "CC": "C:/msys64/ucrt64/bin/clang.exe",
					}
				}
			}
		},
		{
			"type": "shell",
			"group": "build",
			"label": "CMake configure",
			"command": "cmake .. --preset conan-default -DARC_BUILD_TESTS=$BUILD_TESTS -DCMAKE_COLOR_DIAGNOSTICS=TRUE -DCMAKE_CXX_MODULE_STD=${input:ImportStd} -DARC_COMPRESS_TYPES=$COMPRESS_TYPES -DARC_BUILD_LTO=$ENABLE_LTO -DARC_TESTS_DEBUG_SAN=$ENABLE_SAN -DARC_BUILD_BENCH=$BUILD_BENCH -DARC_BUILD_EXAMPLES=$BUILD_EXAMPLES -DCMAKE_BUILD_TYPE=${input:BuildType}",
			"options": {
				"cwd": "${workspaceFolder}/build",
				"env": {
					"COMPRESS_TYPES": "TRUE",
					"ENABLE_LTO": "FALSE",
					"ENABLE_SAN": "FALSE",
					"BUILD_TESTS": "TRUE",
					"BUILD_BENCH": "FALSE",
					"BUILD_EXAMPLES": "FALSE",
				},
			},
			"windows": {
				"command": "cmake .. --preset conan-default -DARC_BUILD_TESTS=%BUILD_TESTS% -DCMAKE_COLOR_DIAGNOSTICS=TRUE -DCMAKE_CXX_MODULE_STD=${input:ImportStd} -DARC_COMPRESS_TYPES=%COMPRESS_TYPES% -DARC_BUILD_LTO=%ENABLE_LTO% -DARC_TESTS_DEBUG_SAN=%ENABLE_SAN% -DARC_BUILD_BENCH=%BUILD_BENCH% -DARC_BUILD_EXAMPLES=%BUILD_EXAMPLES% -DCMAKE_BUILD_TYPE=${input:BuildType}",
				"options": {
					"env": {
						// "CXX": "C:/msys64/ucrt64/bin/g++.exe",
						// "CC": "C:/msys64/ucrt64/bin/gcc.exe",
						// "CXX": "C:/msys64/ucrt64/bin/clang++.exe",
						// "CC": "C:/msys64/ucrt64/bin/clang.exe",
					}
				}
			}
		},
		{
			"type": "shell",
			"group": "build",
			"label": "CMake clean",
			"command": "cmake --build . --target clean",
			"options": {
				"cwd": "${workspaceFolder}/build",
			},
		},
		{
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "CMake build",
			"linux": {
				"command": "time cmake --build . --config ${input:BuildType} && ctest --build-config ${input:BuildType} --output-on-failure"
			},
			"windows": {
				"command": "ptime cmake --build . --config ${input:BuildType} && ctest --build-config ${input:BuildType} --output-on-failure"
			},
			"options": {
				"cwd": "${workspaceFolder}/build",
			},
			"presentation": {
				"clear": true,
				"showReuseMessage": false
			},
		},
		{
			"type": "shell",
			"group": "build",
			"label": "CMake configure and build",
			"dependsOn": ["CMake configure", "CMake build"],
			"dependsOrder": "sequence"
		},
		{
			"type": "shell",
			"group": "build",
			"label": "CMake clean reconfigure and build",
			"dependsOn": ["RM build dir", "Conan install", "CMake configure and build"],
			"dependsOrder": "sequence"
		}
	],
	"inputs": [
		{
			"id": "BuildType",
			"type": "pickString",
			"options": [
				"Debug",
				"RelWithDebInfo",
				"Release",
			],
			"description": "Build config to use"
		},
		{
			"id": "ImportStd",
			"type": "pickString",
			"options": ["TRUE", "FALSE"],
			"description": "Whether to use 'import std'"
		}
	],
}
